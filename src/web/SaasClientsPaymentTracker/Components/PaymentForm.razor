@using SaasClientsPaymentTracker.Models
@using System.ComponentModel.DataAnnotations

<div class="card">
    <div class="card-header">
        Add Payment
    </div>
    <div class="card-body">
        <EditForm Model="@payment" OnValidSubmit="@OnValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group mb-2">
                <label for="clientId">Client ID:</label>
                <InputNumber id="clientId" class="form-control" @bind-Value="payment.ClientId" />
            </div>

            <div class="form-group mb-2">
                <label for="amount">Amount:</label>
                <InputNumber id="amount" class="form-control" @bind-Value="payment.Amount" step="0.01" />
            </div>

            <div class="form-group mb-2">
                <label for="currency">Currency:</label>
                <InputText id="currency" class="form-control" @bind-Value="payment.Currency" />
            </div>

            <div class="form-group mb-2">
                <label for="paidAt">Paid At:</label>
                <InputDate id="paidAt" class="form-control" @bind-Value="payment.PaidAt" />
            </div>

            <div class="form-group mb-2">
                <label for="note">Note (optional):</label>
                <InputTextArea id="note" class="form-control" @bind-Value="payment.Note" />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </EditForm>

        @if (!string.IsNullOrWhiteSpace(success))
        {
            <div class="alert alert-success mt-3">@success</div>
        }
    </div>
</div>

@code {
    private PaymentModel payment = new PaymentModel { PaidAt = DateTime.Today };
    private string success = "";

    private void OnValidSubmit()
    {
        // You can persist payment here (e.g. call a service)
        success = "Payment successfully submitted!";
    }
}

